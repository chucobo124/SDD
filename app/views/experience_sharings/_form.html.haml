= form_for @experience_sharing do |f|
  - if @experience_sharing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@experience_sharing.errors.count, "error")} prohibited this experience_sharing from being saved:"
      %ul
        - @experience_sharing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ES_date
    = f.date_select :ES_date
  .field
    = f.input :ES_context
    = f.text_field :ES_context
  .actions
    = f.submit 'Save'
